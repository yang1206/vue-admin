{
  "name": "vue-template",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "author": "Yang1206 <https://github.com/yang1206>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yang1206/vue-template.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "postinstall": "npx simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:lint-staged": "lint-staged",
    "test": "vitest",
    "commit": "git pull && git add -A && git-cz && git push"
  },
  "dependencies": {
    "@tanstack/vue-query": "^4.35.7",
    "@vueuse/core": "^10.4.1",
    "axios": "^1.5.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.43.1",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@iconify-json/carbon": "^1.1.21",
    "@iconify-json/line-md": "^1.1.29",
    "@types/node": "^20.0.0",
    "@types/nprogress": "^0.2.1",
    "@unocss/eslint-config": "^0.56.5",
    "@unocss/reset": "0.56.5",
    "@vitejs/plugin-vue": "4.5.0",
    "@vue-macros/volar": "^0.16.0",
    "@vue/test-utils": "^2.4.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "eslint": "8.54.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unocss": "0.56.5",
    "unocss-preset-useful": "^0.3.2",
    "unplugin-auto-import": "0.16.7",
    "unplugin-vue-components": "^0.25.2",
    "unplugin-vue-macros": "^2.6.1",
    "unplugin-vue-router": "^0.7.0",
    "vite": "4.4.11",
    "vite-plugin-vue-devtools": "^1.0.0-rc.5",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vitest": "^0.34.6",
    "vue-tsc": "1.8.22"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint:lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "eslintConfig": {
    "extends": [
      "@antfu",
      "@unocss"
    ]
  }
}
