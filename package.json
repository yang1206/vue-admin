{
  "name": "vue-template",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "author": "Yang1206 <https://github.com/yang1206>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yang1206/vue-template.git"
  },
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "postinstall": "npx simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:lint-staged": "lint-staged",
    "test": "vitest",
    "commit": "git pull && git add -A && git-cz && git push"
  },
  "dependencies": {
    "@tanstack/vue-query": "^5.8.7",
    "@vueuse/core": "^10.6.1",
    "axios": "^1.6.2",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "qs": "^6.11.2",
    "vue": "^3.3.9",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@iconify-json/carbon": "^1.1.22",
    "@iconify-json/line-md": "^1.1.33",
    "@types/node": "^20.10.0",
    "@types/nprogress": "^0.2.3",
    "@types/qs": "^6.9.10",
    "@unocss/eslint-config": "^0.57.7",
    "@unocss/reset": "0.57.7",
    "@vitejs/plugin-vue": "4.5.1",
    "@vue-macros/volar": "^0.17.4",
    "@vue/test-utils": "^2.4.2",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "eslint": "8.55.0",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.1.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.2",
    "unocss": "0.57.7",
    "unocss-preset-useful": "^0.3.4",
    "unplugin-auto-import": "0.17.2",
    "unplugin-vue-components": "^0.25.2",
    "unplugin-vue-macros": "^2.7.0",
    "unplugin-vue-router": "^0.7.0",
    "vite": "5.0.5",
    "vite-plugin-vue-devtools": "1.0.0-rc.6",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vitest": "^1.0.0",
    "vue-tsc": "1.8.24"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint:lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  }
}
